<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Abhaya+Libre:wght@700&display=swap');
    body {
        background-color: #161616;
        padding: 0;
        margin: 0;
    }

    header {
        display: flex;
        justify-content: center;
        padding-left: 25px;
    }

    .title {
        font-family: 'Abhaya Libre', serif;
        font-weight: 700;
        font-size: 50px;
        color: #ffffff;
        margin-top: 2rem;
    }

    .image-container {
        margin-top: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        padding: 2rem;
    }

    .image-flex {
        display: flex;
        justify-content: center;
        gap: 2rem;
    }

    .image-flex div img {
        height: 12rem;
        width: 15rem;
        border-radius: 1rem;
    }

    .gg-chevron-left-o, .gg-chevron-right-o {
        box-sizing: border-box;
        position: relative;
        display: block;
        transform: scale(var(--ggs, 1));
        width: 40px;
        height: 40px;
        border: 2px solid;
        border-radius: 100px;
        background-color: #d9d9d974;
    }

    .gg-chevron-left-o {
        margin-right: 2rem;
    }

    .gg-chevron-left-o::after, .gg-chevron-right-o::after {
        content: "";
        display: block;
        box-sizing: border-box;
        position: absolute;
        width: 12px;
        height: 12px;
        border: 2px solid;
        transform: rotate(45deg);
    }

    .gg-chevron-left-o::after {
        border-bottom-color: inherit;
        border-left-color: inherit;
        left: 14px;
        top: 13px;
    }

    .gg-chevron-right-o::after {
        border-bottom-color: inherit;
        border-right-color: inherit;
        left: 10px;
        top: 12px;
    }

    .arrow {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }
</style>
<body>
    <header>
        <div class="title" id="event-title">
            Robo Nitrous
        </div>
    </header>

    <div class="image-container" id="image-container">
        <!-- Dynamic images will be inserted here -->
    </div>

    <div class="arrow">
        <div class="gg-chevron-left-o" id="prev-btn" style="color: white;"></div>
        <div class="gg-chevron-right-o" id="next-btn" style="color: white;"></div>
    </div>

    <script>
        // Event data
        const events = [
            {
                title: "Robo Nitrous",
                images: [
                    "images/_DSC0347 2.png",
                    "images/_DSC0347 2.png",
                    "images/_DSC0347 2.png",
                    "images/_DSC0347 2.png",
                    "images/_DSC0347 2.png",
                    "images/_DSC0347 2.png",
                    "images/_DSC0347 2.png",
                    "images/_DSC0347 2.png"
                ]
            },
            {
                title: "Robo War",
                images: [
                    "images/DSC_0048.JPG",
                    "images/DSC_0048.JPG",
                    "images/DSC_0048.JPG",
                    "images/DSC_0048.JPG",
                    "images/DSC_0048.JPG",
                    "images/DSC_0048.JPG",
                    "images/DSC_0048.JPG",
                    "images/DSC_0048.JPG"
                ]
            },
            {
                title: "Robo Soccer",
                images: [
                "images/DSC11 copy.png",
                "images/DSC11 copy.png",
                "images/DSC11 copy.png",
                "images/DSC11 copy.png",
                "images/DSC11 copy.png",
                "images/DSC11 copy.png",
                "images/DSC11 copy.png",
                "images/DSC11 copy.png"
                ]
            }
        ];

        let currentIndex = 0;

        // Function to update content
        function updateContent() {
            const event = events[currentIndex];
            document.getElementById('event-title').textContent = event.title;

            const imageContainer = document.getElementById('image-container');
            imageContainer.innerHTML = ''; // Clear existing images

            const firstRow = document.createElement('div');
            firstRow.classList.add('image-flex');

            const secondRow = document.createElement('div');
            secondRow.classList.add('image-flex');

            event.images.forEach((imageSrc, index) => {
                const imageDiv = document.createElement('div');
                const img = document.createElement('img');
                img.src = imageSrc;
                imageDiv.appendChild(img);

                if (index < 4) {
                    firstRow.appendChild(imageDiv);
                } else {
                    secondRow.appendChild(imageDiv);
                }
            });

            imageContainer.appendChild(firstRow);
            imageContainer.appendChild(secondRow);
        }

        // Event listeners for navigation
        document.getElementById('prev-btn').addEventListener('click', () => {
            currentIndex = (currentIndex === 0) ? events.length - 1 : currentIndex - 1;
            updateContent();
        });

        document.getElementById('next-btn').addEventListener('click', () => {
            currentIndex = (currentIndex + 1) % events.length;
            updateContent();
        });

        // Initialize with the first event
        updateContent();
    </script>
</body>
</html>
